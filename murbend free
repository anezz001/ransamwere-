  <script>
    // Countdown
    let time = 10;
    const timer = document.getElementById("timer");
    const page1 = document.getElementById("page1");
    const page2 = document.getElementById("page2");
    const page3 = document.getElementById("page3");

    const countdown = setInterval(() => {
      time--;
      timer.textContent = time;
      if (time <= 0) {
        clearInterval(countdown);
        page1.classList.remove("active");
        page2.classList.add("active");
      }
    }, 700); // lebih cepat dari 1 detik
     
    // Tombol Chat
    function chatTelegram() {
      window.location.href = "https://t.me/anezzz1";
    }

    // Tombol Skip
    function gotoSkip() {
      page1.classList.remove("active");
      page3.classList.add("active");

      // Spam teks warna-warni
      setInterval(() => {
        let span = document.createElement("span");
        span.className = "spam";
        span.innerText = "ðŸ”’ HAHHAHAH IDIOT TOLOL UDAH TAU NGANCEM MASIH KAGA PERCAYA PEA INI ORANG ðŸ”’";
        span.style.left = Math.random() * window.innerWidth + "px";
        span.style.color = getRandomColor();
        page3.appendChild(span);

        // hapus biar ga numpuk terus
        setTimeout(() => span.remove(), 5000);
      }, 100);
    }

    // Fungsi warna random
    function getRandomColor() {
      const colors = ["red", "lime", "cyan", "yellow", "magenta", "white", "orange"];
      return colors[Math.floor(Math.random() * colors.length)];
    }
  </script>
